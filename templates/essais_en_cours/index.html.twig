{% extends 'base.html.twig' %}

{% block title %}Essais en cours - Stellantis{% endblock %}

{% block body %}
    <Section class="w-100 d-flex">
        <div class="div-cutom-menu text-center">
            <h3>
                <a href="{{ path('app_account') }}">Ajouter un essai</a>
            </h3>
        </div>
        <div class="div-cutom-menu-active text-center">
            <h3>
                <a href="{{ path('app_essais') }}">Essais en cours</a>
            </h3>
        </div>

    </Section>

    <div class="list-custom">
        <div class="article-list row">
            <div class="col-2 item-list"><p class="article-p">StartedAt</p></div>
            <div class="col-2 item-list"><p class="article-p">Voiture</p></div>
            <div class="col-3 item-list"><p class="article-p">Parcours</p></div>
            <div class="col-3 item-list"><p class="article-p">Client</p></div>
            <div class="col-2 item-list"><p class="article-p">En cours</p></div>
        </div>
        {% for essai in essais %}
            {% if essai.etat == true  %}
                <div class="article-list row px-0">
                    <div class="col-2 item-list"><p class="article-p">{{ essai.startedAt|date('d/m/y H:i') }}</p></div>
                    <div class="col-2 item-list"><p class="article-p">{{ essai.voiture }}</p></div>
                    <div class="col-3 item-list"><p class="article-p">{{ essai.route }}</p></div>
                    <div class="col-3 item-list"><p class="article-p">{{ essai.conducteur }}</p></div>

                    <div class="col-2 item-list pt-3 ">
                        <a href="{{ path('app_state_essais', {'id' : essai.id}) }}" class=" article-button">
                            {% if essai.etat == false %}
                                Non
                            {% else %}
                                Oui
                            {% endif %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-repeat" viewBox="0 0 16 16">
                                <path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41zm-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9z"/>
                                <path fill-rule="evenodd" d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5.002 5.002 0 0 0 8 3zM3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9H3.1z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>

{% endblock %}

