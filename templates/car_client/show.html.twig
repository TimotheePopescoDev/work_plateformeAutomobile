{% extends 'base.html.twig' %}

{% block title %}{{ car.modele }} - {{ car.marques }}{% endblock %}

{% block body %}
    <div class="text-center p-4">
        <h3>
            {{ car.marques }}
        </h3>
        <h5>{{ car.modele }}</h5>
    </div>
    <div>
        <img src="/uploads/{{ car.illustration }}" class="img-fluid w-100 h-auto p-5" alt="">
    </div>
    <div class="text-right m-4 body-client-custom">
        <a href="{{ path('app_car_client') }}">
            <h5>Revenir sur la liste des voitures</h5>
        </a>
    </div>
{% endblock %}
