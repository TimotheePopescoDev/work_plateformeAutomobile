<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('assets/logo.png') }}" />
    <title>{% block title %} {% endblock %}</title>

    <link href="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
</head>
    <body lang="fr">
        <header>
            <nav class="navbar navbar-expand-lg ">
                    <div class="nav-logo-left">
                        <a class="navbar-brand pl-2" href="{{ path('app_home') }}"><img src="{{ asset('assets/logostellantis.jpg') }}" alt="">
                        </a>
                    </div>
                {% if  app.user %}
                <button class="navbar-toggler navbar-button-burger" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler">&#9776;</span>
                </button>
                <div class="collapse navbar-collapse custom-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item px-4">
                                <a class="nav-link" href="{{ path('app_account') }}">Gestion des essais</a>
                            </li>
                            <li class="nav-item px-4">
                                <a class="nav-link" href="{{ path('app_clients') }}">Listes clients|voitures </a>
                            </li>
                            <li class="nav-item px-4">
                                <a class="nav-link" href="{{ path('app_essais_complet') }}">Historiques</a>
                            </li>
                        {% endif %}
                        <li class="nav-item px-4">
                            <a class="nav-link" href="{{ path('app_logout') }}">DÃ©connexion</a>
                        </li>
                    </ul>

                </div>
            </nav>
            {% endif %}

        </header>

        <section class="body-custom">
            {% block body %}
            {% endblock %}
        </section>
        <footer class="footer-custom">
            <section class="row">
                <div class="col-6"><p>&copy; 2023 Stellantis, Sales and Services &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p></div>
                {#{% if is_granted('ROLE_ADMIN') %}
                    <div class="col-6 text-right"><a href="{{ path('app_register') }}">Rajouter un compte utilisateur</a></div>
                {% endif %}#}
            </section>
        </footer>
